<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_margin="10dp"
    android:background="@drawable/snakebar_bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Ticket Details"
        android:layout_toStartOf="@id/btnDismiss"
        android:layout_alignBottom="@id/btnDismiss"
        android:layout_alignTop="@id/btnDismiss"
        android:textAlignment="textStart"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"

        />

    <Button
        android:id="@+id/btnView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View"
        android:foreground="?android:selectableItemBackground"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent"
        android:textColor="@color/lightBlue"/>

    <Button
        android:id="@+id/btnDismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:text="Dismiss"
        android:layout_toStartOf="@id/btnView"
        android:foreground="?android:selectableItemBackground"
        android:layout_marginEnd="10dp"
        android:textColor="@color/lightBlue" />

</RelativeLayout>
